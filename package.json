{
  "name": "my-component",
  "version": "1.0.0",
  "description": "my-component description",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "clean-unit-tests": "rimraf ./build-test",
    "build-unit-tests": "tsc -p ./src/tsconfig.test.json",
    "run-unit-tests": "jest",
    "unit-tests": "npm run clean-unit-tests && npm run build-unit-tests && npm run run-unit-tests",

    "lint": "eslint -c .eslintrc.json ./src --ext .ts,.tsx",
    "lint-errors-only": "eslint -c .eslintrc.json ./src --ext .ts,.tsx --quiet",
   
    "build-ts": "tsc --project ./src/tsconfig.json",

    "check": "npm rum lint-errors-only && npm run build-ts && npm run unit-tests",

    "start": "tsc --project ./src/tsconfig.json --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": { },
  "devDependencies": {
    "rimraf": "^3.0.2",
    "@types/node": "^17.0.19",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-jest": "^28.1.1",
    "concurrently": "^7.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.4",
    "typescript": "^4.5.5"
  }
}
